<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:backgroundTint="#eeeeee"
        android:background="#f0e7e7"
        android:id="@+id/fundoDoItem">


        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imageView"
            android:background="#eeeeee"
            android:src="@drawable/timer3" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nome Tarefa"
            android:id="@+id/textView"
            android:textSize="25sp"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/imageView"
            android:paddingTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descricao"
            android:id="@+id/itemDescricao"
            android:layout_below="@+id/textView"
            android:layout_toEndOf="@+id/imageView"
            android:textSize="20sp"
            android:paddingTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pomodoros: "
            android:id="@+id/itemPomodoros"
            android:layout_below="@+id/itemDescricao"
            android:layout_toEndOf="@+id/imageView"
            android:textSize="20sp"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:id="@+id/itemNumeroPomodoros"
            android:layout_toEndOf="@+id/itemPomodoros"
            android:layout_below="@+id/itemDescricao"
            android:textSize="20sp"
            android:paddingTop="5dp" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iniciar"
            android:id="@+id/itemBtnIniciar"
            android:layout_alignParentTop="true"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignStart="@+id/itemBtnConcluido" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Concluido"
            android:id="@+id/itemBtnConcluido"
            android:layout_below="@+id/itemBtnIniciar"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</android.support.v7.widget.CardView>